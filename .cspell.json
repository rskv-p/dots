
{
  "version": "0.2",

  "language": "en",

  "allowCompoundWords": true,

  "ignorePaths": [".cspell.json"],

  "patterns": [
    {
      "name": "myFavoriteCodingFontFace",
      "pattern": "[Ss]arasa"
    },
    {
      "name": "comment-single-line",
      "pattern": "/#.*/g"
    },
    {
      "name": "comment-multi-line",
      "pattern": "/(?:\\/\\*[\\s\\S]*?\\*\\/)/g"
    },
    {
      "name": "comments",
      "pattern": ["comment-single-line", "comment-multi-line"]
    }
  ],

  "ignoreRegExpList": ["myFavoriteCodingFontFace", "myUserName", "comments"]
}
